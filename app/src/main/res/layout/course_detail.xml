<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/parent_layout"
     android:layout_margin="8dp">

  <ImageView
       android:id="@+id/img_course"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@color/colorPrimary"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"/>

  <TextView
       android:id="@+id/tv_course_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@color/colorPrimary"
       app:layout_constraintTop_toTopOf="@id/img_course"
       tools:text="Course Title"
       android:textSize="18sp"
       app:layout_constraintLeft_toRightOf="@id/img_course"
       android:layout_marginStart="6dp"
       android:layout_marginTop="4dp"
       android:textStyle="bold"/>

  <TextView
       android:id="@+id/tv_course_episode"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@color/colorPrimary"
       app:layout_constraintTop_toBottomOf="@id/tv_course_title"
       tools:text="Episode"
       android:textSize="16sp"
       app:layout_constraintLeft_toLeftOf="@id/tv_course_title"
       android:layout_marginTop="4dp"/>

  <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@color/colorPrimary"
       app:layout_constraintTop_toBottomOf="@id/tv_course_episode"
       tools:text="Duration"
       android:textSize="16sp"
       app:layout_constraintLeft_toLeftOf="@id/tv_course_title"
       android:layout_marginTop="4dp"/>

</android.support.constraint.ConstraintLayout>